<script>
    function copyToClipboard(inputId, successTitle, successText) {
        /* Function to copy text to clipboard */
        var copyText = document.querySelector(`#${inputId}`);
        copyText.select();
        document.execCommand("copy");

        // Replace standard alert with SweetAlert
        Swal.fire({
            icon: 'success',
            title: successTitle,
            text: successText,
        });
    }

    function copyReferralLink() {
        copyToClipboard(
            "form-controlCopyLink",
            'Copied!',
            'Referral link copied to clipboard!'
        );
    }

    function copyReferral() {
        copyToClipboard(
            "form-controlCopyCode",
            'Copied!',
            'Referral code copied'
        );
    }
</script>

