<%- include('admin-partials/header.ejs') %>
<style>
      .container {
            margin-top: 30px;
            margin-left: 300px;
      }
  
      .card {
            margin-bottom: 30px;
      }
  
      @media (max-width: 750px) {
            .container {
                  margin-left: 0;
  
            }
      }
  </style>    
<header class="main-header navbar">
      <div class="col-search">
      </div>
      <div class="col-nav">
            <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
            <ul class="nav">
                  <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i>
                        </a>
                  </li>
                  <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i
                                    class="material-icons md-cast"></i></a>
                  </li>

                  <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                              aria-expanded="false">
                              <i class="fa-solid fa-user-tie"></i>
                              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                                    <a class="dropdown-item" href="#"><i
                                                class="material-icons md-perm_identity"></i>Edit
                                          Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="/admin"><i
                                                class="material-icons md-exit_to_app"></i>Logout</a>
                              </div>
                  </li>
            </ul>
      </div>
</header>

<div class="container">
      <div class="card">
            <div class="card-header  text-white " style="background-color: rgb(240, 202, 151);">
                  <h4 class="mt-3" style="font-weight: 800; text-align: center;">Add Offer to Category</h4>
            </div>
            <div class="card-body">
                  <%= error %>
                  <form onsubmit="validateForm(event)">
                        <div class="form-group mb-3">
                              <label for="productCategory">Category</label>
                              <select class="form-control" id="productCategory" name="category">
                                    <option value="">Select a Category</option>
                                    <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>">
                                          <%= category.name %>
                                    </option>
                                    <% }) %>
                              </select>

                        </div>
                        <div class="form-group">
                              <label for="discount">Discount Percentage:</label>
                              <input type="number" class="form-control" id="discount" name="discount"
                                    placeholder="Enter discount percentage 0-100%">

                        </div>
                        <div class="form-group">
                              <label for="Date">Expiry Date :</label>
                              <input type="Date" class="form-control" id="Date" name="expiryDate"
                                    placeholder="Enter the expire date">
                        </div>
                        <button type="submit" class="btn btn-success">Add Offer</button>
                  </form>
            </div>
      </div>

      <!-- Category Offers -->
      <div class="card">
            <div class="card-header bg-info text-white">
                  <h5>Category Offers</h5>
            </div>
            <div class="card-body">
                  <% if (categories ) { %>
                  <% categories.forEach(element => { %>
                  <!-- Display category offers dynamically here -->
                  <div class="alert" style="background-color: antiquewhite;" role="alert">
                        <span style="font-weight: 700;"><%= element.name %></span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        :
                        <% if (element.offer) { %>
                        <span style="color: #14c914; font-weight: 800;"><%= element.offer %>% OFF</span>
                        <% } else { %>
                        <span style="color: #dc0a26; font-weight: 800;">0% OFF</span>
                        <% } %>
                  </div>
                  <% }) %>
                  <% } else { %>
                  <div class="alert alert-warning " role="alert">
                        No offers available
                  </div>

                  <% } %>
            </div>
      </div>
      <a class="menu-link" href="/admin/dashboard"> <i class="icon material-icons md-home"></i>
            <span class="text" style="color: #000000;">Dashboard</span>
      </a>
</div>

<%- include('admin-partials/footer.ejs') %>
